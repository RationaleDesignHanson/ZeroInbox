{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ZeroActionSchema",
  "description": "JSON schema for Zero action definitions",
  "type": "object",
  "required": ["schemaVersion", "actions"],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "description": "Schema version for compatibility checking",
      "pattern": "^\\d+\\.\\d+$"
    },
    "actions": {
      "type": "array",
      "description": "Array of action definitions",
      "items": {
        "$ref": "#/definitions/Action"
      }
    }
  },
  "definitions": {
    "Action": {
      "type": "object",
      "required": ["actionId", "displayName", "actionType", "mode", "priority"],
      "properties": {
        "actionId": {
          "type": "string",
          "description": "Unique identifier for the action"
        },
        "displayName": {
          "type": "string",
          "description": "User-facing action name"
        },
        "description": {
          "type": "string",
          "description": "Internal description of what the action does"
        },
        "actionType": {
          "type": "string",
          "enum": ["GO_TO", "IN_APP"],
          "description": "How the action is executed"
        },
        "mode": {
          "type": "string",
          "enum": ["mail", "ads", "both"],
          "description": "Which Zero mode this action applies to"
        },
        "category": {
          "type": "string",
          "description": "Action category for organization"
        },
        "icon": {
          "type": "string",
          "description": "SF Symbol icon name"
        },
        "color": {
          "type": "string",
          "description": "Color in hex format (#RRGGBB)"
        },
        "priority": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Action priority (0-100)"
        },
        "isPremium": {
          "type": "boolean",
          "default": false,
          "description": "Whether this action requires premium subscription"
        },
        "confirmation": {
          "$ref": "#/definitions/Confirmation",
          "description": "Confirmation requirements for this action"
        },
        "undo": {
          "$ref": "#/definitions/UndoConfig",
          "description": "Undo configuration for reversible actions"
        },
        "availability": {
          "$ref": "#/definitions/Availability",
          "description": "When this action should be shown"
        },
        "context": {
          "type": "object",
          "description": "Action-specific context and configuration",
          "additionalProperties": true
        }
      }
    },
    "Confirmation": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["none", "simple", "detailed"]
        },
        "message": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "confirmText": {
          "type": "string"
        },
        "cancelText": {
          "type": "string"
        }
      }
    },
    "UndoConfig": {
      "type": "object",
      "properties": {
        "toastMessage": {
          "type": "string"
        },
        "undoWindowSeconds": {
          "type": "number",
          "minimum": 1,
          "maximum": 60
        },
        "undoActionId": {
          "type": "string"
        },
        "countdownStyle": {
          "type": "string",
          "enum": ["progressBar", "circularRing", "numeric", "none"]
        }
      }
    },
    "Availability": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "field": {
                "type": "string"
              },
              "operator": {
                "type": "string",
                "enum": ["equals", "notEquals", "contains", "greaterThan", "lessThan", "exists"]
              },
              "value": {
                "type": ["string", "number", "boolean"]
              }
            }
          }
        },
        "requiresPermissions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
