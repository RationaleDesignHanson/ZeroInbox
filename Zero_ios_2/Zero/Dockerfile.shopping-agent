# Shopping Agent Service Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files from shopping-agent directory
COPY services/shopping-agent/package*.json ./

# Install production dependencies
RUN npm install --only=production

# Copy shared modules
COPY shared/ ./shared/

# Copy shopping-agent service
COPY services/shopping-agent/ ./services/shopping-agent/

# Expose port
EXPOSE 8080

# Set environment
ENV NODE_ENV=production
ENV PORT=8080

# Start service
CMD ["node", "services/shopping-agent/server.js"]
