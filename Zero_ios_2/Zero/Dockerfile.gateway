# API Gateway Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install production dependencies
RUN npm install --only=production

# Copy shared modules
COPY shared/ ./shared/

# Copy gateway
COPY gateway/ ./gateway/

# Expose port
EXPOSE 8080

# Set environment
ENV NODE_ENV=production
ENV PORT=8080

# Start gateway
CMD ["node", "gateway/server.js"]
