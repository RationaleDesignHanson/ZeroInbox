# Classifier Service Configuration

# Server
PORT=8082

# Secondary AI Classifier (Gemini 2.0 Flash)
USE_SECONDARY_CLASSIFIER=true
GEMINI_API_KEY=your_gemini_api_key_here

# Phase 6.1: ML-based Smart Replies
ML_REPLIES_ENABLED=false
ML_PROVIDER=openai  # or 'anthropic'
ML_MODEL=gpt-4o-mini
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Phase 6.2: Redis Distributed Caching
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=classifier:

# Logging
LOG_LEVEL=info
