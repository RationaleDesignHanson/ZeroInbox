{
  "name": "emailshortform-backend",
  "version": "1.2.0",
  "description": "Backend services for EmailShortForm (Zero) iOS app",
  "main": "services/gateway/server.js",
  "scripts": {
    "start": "node services/gateway/server.js",
    "dev": "nodemon services/gateway/server.js",
    "start:email": "node services/email/server.js",
    "start:classifier": "USE_ACTION_FIRST=true node services/classifier/server.js",
    "start:summarization": "node services/summarization/server.js",
    "start:scheduled-purchase": "node services/scheduled-purchase/server.js",
    "start:shopping-agent": "PORT=8086 node services/shopping-agent/server.js",
    "start:steel-agent": "node services/steel-agent/server.js",
    "start:smart-replies": "GOOGLE_CLOUD_PROJECT=gen-lang-client-0622702687 PORT=8084 node services/smart-replies/server.js",
    "start:all": "concurrently \"npm run start:email\" \"npm run start:classifier\" \"npm run start:summarization\" \"npm run start:scheduled-purchase\" \"npm run start:shopping-agent\" \"npm run start:steel-agent\" \"npm run start:smart-replies\" \"npm run start\"",
    "test": "jest"
  },
  "keywords": [
    "email",
    "ai",
    "gmail",
    "outlook"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^2.6.0",
    "@google-cloud/aiplatform": "^3.9.0",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^128.0.0",
    "helmet": "^7.1.0",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.6.5",
    "node-mbox": "^2.0.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
}
