{
  "$schema": "https://design-tokens.github.io/community-group/format-draft1.json",
  "name": "Zero Design System",
  "version": "2.0.0",
  "description": "Complete design token system matching iOS DesignTokens.swift implementation",

  "primitive": {
    "$description": "Raw values - internal use only",
    "size": {
      "$type": "dimension",
      "xxxs": { "$value": "2px", "description": "Minimum size" },
      "xxs": { "$value": "4px", "description": "Extra extra small" },
      "xs": { "$value": "6px", "description": "Extra small" },
      "sm": { "$value": "8px", "description": "Small" },
      "md": { "$value": "10px", "description": "Medium" },
      "lg": { "$value": "12px", "description": "Large" },
      "xl": { "$value": "16px", "description": "Extra large" },
      "xxl": { "$value": "20px", "description": "Extra extra large" },
      "xxxl": { "$value": "24px", "description": "Triple extra large" },
      "xxxxl": { "$value": "32px", "description": "Quadruple extra large" },
      "xxxxxl": { "$value": "48px", "description": "Quintuple extra large" }
    },
    "opacity": {
      "$type": "number",
      "none": { "$value": 0.0, "description": "Fully transparent" },
      "glass": { "$value": 0.05, "description": "Ultra-transparent for glass effects" },
      "subtle": { "$value": 0.1, "description": "Barely visible" },
      "light": { "$value": 0.2, "description": "Light overlays" },
      "medium": { "$value": 0.3, "description": "Standard overlays" },
      "strong": { "$value": 0.5, "description": "Heavy overlays" },
      "disabled": { "$value": 0.6, "description": "Disabled/faded elements" },
      "secondary": { "$value": 0.7, "description": "Secondary text" },
      "tertiary": { "$value": 0.8, "description": "Tertiary text" },
      "primary": { "$value": 0.9, "description": "Primary readable text" },
      "full": { "$value": 1.0, "description": "Fully opaque" }
    },
    "blur": {
      "$type": "dimension",
      "subtle": { "$value": "10px", "description": "Light blur" },
      "standard": { "$value": "20px", "description": "Standard glassmorphic" },
      "heavy": { "$value": "30px", "description": "Intense glassmorphic" },
      "ultra": { "$value": "40px", "description": "Ultra-blurred backgrounds" }
    },
    "duration": {
      "$type": "duration",
      "instant": { "$value": "100ms", "description": "Immediate feedback" },
      "quick": { "$value": "200ms", "description": "Quick transitions" },
      "fast": { "$value": "300ms", "description": "Fast animations" },
      "normal": { "$value": "500ms", "description": "Standard duration" },
      "slow": { "$value": "700ms", "description": "Slow animations" },
      "lazy": { "$value": "1000ms", "description": "Very slow" }
    }
  },

  "spacing": {
    "$type": "dimension",
    "$description": "Semantic spacing tokens",
    "card": { "$value": "{primitive.size.xxxl}", "description": "Card padding (24px)" },
    "modal": { "$value": "{primitive.size.xxxl}", "description": "Modal padding (24px)" },
    "section": { "$value": "{primitive.size.xxl}", "description": "Section gaps (20px)" },
    "component": { "$value": "{primitive.size.xl}", "description": "Component spacing (16px)" },
    "element": { "$value": "{primitive.size.lg}", "description": "Element spacing (12px)" },
    "inline": { "$value": "{primitive.size.sm}", "description": "Inline spacing (8px)" },
    "tight": { "$value": "{primitive.size.xs}", "description": "Tight spacing (6px)" },
    "minimal": { "$value": "{primitive.size.xxs}", "description": "Minimal spacing (4px)" }
  },

  "radius": {
    "$type": "dimension",
    "$description": "Border radius tokens",
    "card": { "$value": "{primitive.size.xl}", "description": "Main cards (16px)" },
    "modal": { "$value": "{primitive.size.xxl}", "description": "Modals (20px)" },
    "container": { "$value": "{primitive.size.xl}", "description": "Containers (16px)" },
    "button": { "$value": "{primitive.size.lg}", "description": "Buttons (12px)" },
    "chip": { "$value": "{primitive.size.sm}", "description": "Chips/pills (8px)" },
    "minimal": { "$value": "{primitive.size.xxs}", "description": "Minimal rounding (4px)" },
    "circle": { "$value": "999px", "description": "Full circle" }
  },

  "opacity": {
    "$type": "number",
    "$description": "Semantic opacity tokens",
    "glassUltraLight": { "$value": "{primitive.opacity.glass}", "description": "Ultra-light glass (0.05)" },
    "glassLight": { "$value": "{primitive.opacity.subtle}", "description": "Light glass (0.1)" },
    "glassMedium": { "$value": "{primitive.opacity.light}", "description": "Medium glass (0.2)" },
    "overlayLight": { "$value": "{primitive.opacity.light}", "description": "Light overlay (0.2)" },
    "overlayMedium": { "$value": "{primitive.opacity.medium}", "description": "Medium overlay (0.3)" },
    "overlayStrong": { "$value": "{primitive.opacity.strong}", "description": "Strong overlay (0.5)" },
    "textDisabled": { "$value": "{primitive.opacity.disabled}", "description": "Disabled text (0.6)" },
    "textSubtle": { "$value": "{primitive.opacity.secondary}", "description": "Subtle text (0.7)" },
    "textTertiary": { "$value": "{primitive.opacity.tertiary}", "description": "Tertiary text (0.8)" },
    "textSecondary": { "$value": "{primitive.opacity.primary}", "description": "Secondary text (0.9)" },
    "textPrimary": { "$value": "{primitive.opacity.full}", "description": "Primary text (1.0)" }
  },

  "colors": {
    "$type": "color",
    "base": {
      "white": { "$value": "#FFFFFF", "description": "Pure white" },
      "black": { "$value": "#000000", "description": "Pure black" }
    },
    "text": {
      "$description": "White with semantic opacity",
      "primary": { "$value": "#FFFFFF", "opacity": "{opacity.textPrimary}", "description": "Primary text (white @ 1.0)" },
      "secondary": { "$value": "#FFFFFF", "opacity": "{opacity.textSecondary}", "description": "Secondary text (white @ 0.9)" },
      "tertiary": { "$value": "#FFFFFF", "opacity": "{opacity.textTertiary}", "description": "Tertiary text (white @ 0.8)" },
      "subtle": { "$value": "#FFFFFF", "opacity": "{opacity.textSubtle}", "description": "Subtle text (white @ 0.7)" },
      "faded": { "$value": "#FFFFFF", "opacity": "{opacity.textDisabled}", "description": "Faded text (white @ 0.6)" },
      "placeholder": { "$value": "#FFFFFF", "opacity": "{opacity.overlayMedium}", "description": "Placeholder text (white @ 0.3)" }
    },
    "border": {
      "$description": "Border colors with opacity",
      "strong": { "$value": "#FFFFFF", "opacity": "{opacity.overlayMedium}", "description": "Strong border (white @ 0.3)" },
      "default": { "$value": "#FFFFFF", "opacity": "{opacity.overlayLight}", "description": "Default border (white @ 0.2)" },
      "subtle": { "$value": "#FFFFFF", "opacity": "{opacity.glassLight}", "description": "Subtle border (white @ 0.1)" },
      "faint": { "$value": "#FFFFFF", "opacity": "{opacity.glassUltraLight}", "description": "Faint border (white @ 0.05)" }
    },
    "overlay": {
      "$description": "Overlay colors",
      "white20": { "$value": "#FFFFFF", "opacity": "{opacity.overlayLight}", "description": "White overlay @ 0.2" },
      "white10": { "$value": "#FFFFFF", "opacity": "{opacity.glassLight}", "description": "White overlay @ 0.1" },
      "white5": { "$value": "#FFFFFF", "opacity": "{opacity.glassUltraLight}", "description": "White overlay @ 0.05" },
      "blackDark": { "$value": "#000000", "opacity": 0.8, "description": "Dark black overlay" },
      "blackMedium": { "$value": "#000000", "opacity": 0.5, "description": "Medium black overlay" },
      "blackLight": { "$value": "#000000", "opacity": 0.3, "description": "Light black overlay" }
    },
    "accent": {
      "$description": "Accent colors",
      "blue": { "$value": "#007AFF", "opacity": 0.8, "description": "iOS blue accent" },
      "green": { "$value": "#34C759", "opacity": 0.8, "description": "iOS green accent" },
      "purple": { "$value": "#AF52DE", "opacity": 0.8, "description": "iOS purple accent" },
      "red": { "$value": "#FF3B30", "opacity": 1.0, "description": "iOS red accent" }
    },
    "gradients": {
      "$description": "Archetype gradient colors",
      "mail": {
        "start": { "$value": "#667eea", "description": "Mail gradient start (blue)" },
        "end": { "$value": "#764ba2", "description": "Mail gradient end (purple)" }
      },
      "ads": {
        "start": { "$value": "#16bbaa", "description": "Ads gradient start (teal/cyan)" },
        "end": { "$value": "#4fd19e", "description": "Ads gradient end (green)" }
      }
    },
    "adsText": {
      "$description": "Dark text colors for Ads archetype light backgrounds",
      "primary": { "$value": "#0D594D", "description": "Dark teal - primary (rgb(0.05, 0.35, 0.30))" },
      "secondary": { "$value": "#147361", "description": "Medium teal - secondary (rgb(0.08, 0.45, 0.38))" },
      "tertiary": { "$value": "#198573", "description": "Lighter teal - tertiary (rgb(0.10, 0.52, 0.45))" },
      "subtle": { "$value": "#269985", "description": "Subtle teal (rgb(0.15, 0.60, 0.52))" },
      "faded": { "$value": "#33A691", "opacity": 0.7, "description": "Faded teal (rgb(0.20, 0.65, 0.57))" }
    },
    "semantic": {
      "$description": "Semantic state colors",
      "error": {
        "primary": { "$value": "#FF3B30", "description": "Error primary" },
        "background": { "$value": "#FF3B30", "opacity": 0.15, "description": "Error background" },
        "border": { "$value": "#FF3B30", "opacity": 0.5, "description": "Error border" },
        "text": { "$value": "#FF3B30", "opacity": 0.8, "description": "Error text" }
      },
      "warning": {
        "primary": { "$value": "#FF9500", "description": "Warning primary" },
        "background": { "$value": "#FF9500", "opacity": 0.15, "description": "Warning background" },
        "border": { "$value": "#FF9500", "opacity": 0.5, "description": "Warning border" }
      },
      "success": {
        "primary": { "$value": "#34C759", "description": "Success primary" },
        "background": { "$value": "#34C759", "opacity": 0.1, "description": "Success background" },
        "border": { "$value": "#34C759", "opacity": 0.3, "description": "Success border" }
      },
      "info": {
        "primary": { "$value": "#007AFF", "description": "Info primary" },
        "background": { "$value": "#007AFF", "opacity": 0.15, "description": "Info background" },
        "border": { "$value": "#007AFF", "opacity": 0.5, "description": "Info border" }
      }
    }
  },

  "typography": {
    "$description": "Typography scale and font definitions",
    "fontFamily": {
      "$type": "fontFamily",
      "system": { "$value": "SF Pro", "description": "System font (iOS)" }
    },
    "fontSize": {
      "$type": "dimension",
      "display": {
        "large": { "$value": "34px", "description": "Large title" },
        "medium": { "$value": "28px", "description": "Title" }
      },
      "heading": {
        "large": { "$value": "22px", "description": "Title 2" },
        "medium": { "$value": "20px", "description": "Title 3" },
        "small": { "$value": "17px", "description": "Headline" }
      },
      "body": {
        "large": { "$value": "17px", "description": "Body" },
        "medium": { "$value": "16px", "description": "Callout" },
        "small": { "$value": "15px", "description": "Subheadline" }
      },
      "label": {
        "large": { "$value": "12px", "description": "Caption" },
        "medium": { "$value": "12px", "description": "Caption" },
        "small": { "$value": "11px", "description": "Caption 2" }
      },
      "card": {
        "title": { "$value": "19px", "description": "Email card title" },
        "summary": { "$value": "15px", "description": "Email card summary" },
        "sectionHeader": { "$value": "15px", "description": "Section headers" }
      },
      "thread": {
        "title": { "$value": "14px", "description": "Thread card title" },
        "summary": { "$value": "16px", "description": "Thread card summary" },
        "messageSender": { "$value": "13px", "description": "Thread message sender" },
        "messageBody": { "$value": "13px", "description": "Thread message body" }
      }
    },
    "fontWeight": {
      "$type": "fontWeight",
      "regular": { "$value": 400, "description": "Regular weight" },
      "medium": { "$value": 500, "description": "Medium weight" },
      "semibold": { "$value": 600, "description": "Semibold weight" },
      "bold": { "$value": 700, "description": "Bold weight" }
    }
  },

  "components": {
    "$description": "Component-specific token sets",
    "card": {
      "$type": "composite",
      "padding": { "$value": "{spacing.card}", "description": "Card padding (24px)" },
      "radius": { "$value": "{radius.card}", "description": "Card radius (16px)" },
      "shadowRadius": { "$value": "20px", "description": "Shadow blur radius" },
      "shadowOpacity": { "$value": "{opacity.overlayMedium}", "description": "Shadow opacity (0.3)" },
      "glassOpacity": { "$value": "{opacity.glassUltraLight}", "description": "Glass background opacity (0.05)" }
    },
    "button": {
      "$type": "composite",
      "padding": { "$value": "{spacing.component}", "description": "Button padding (16px)" },
      "radius": { "$value": "{radius.button}", "description": "Button radius (12px)" },
      "heightStandard": { "$value": "56px", "description": "Standard button height" },
      "heightCompact": { "$value": "44px", "description": "Compact button height" },
      "heightSmall": { "$value": "32px", "description": "Small button height" },
      "iconSize": { "$value": "20px", "description": "Button icon size" }
    },
    "modal": {
      "$type": "composite",
      "padding": { "$value": "{spacing.modal}", "description": "Modal padding (24px)" },
      "radius": { "$value": "{radius.modal}", "description": "Modal radius (20px)" },
      "overlayOpacity": { "$value": "{opacity.overlayStrong}", "description": "Backdrop opacity (0.5)" }
    },
    "badge": {
      "$type": "composite",
      "size": { "$value": "12px", "description": "Badge size" },
      "sizeLarge": { "$value": "16px", "description": "Large badge size" },
      "offsetX": { "$value": "4px", "description": "Badge X offset" },
      "offsetY": { "$value": "-4px", "description": "Badge Y offset" },
      "borderWidth": { "$value": "2px", "description": "Badge border width" }
    },
    "alertCard": {
      "$type": "composite",
      "borderWidth": { "$value": "2px", "description": "Alert border width" },
      "borderWidthSubtle": { "$value": "1px", "description": "Subtle alert border" }
    },
    "shadow": {
      "$type": "composite",
      "$description": "Shadow presets",
      "card": {
        "color": { "$value": "#000000", "opacity": 0.4 },
        "radius": { "$value": "20px" },
        "offsetX": { "$value": "0px" },
        "offsetY": { "$value": "10px" }
      },
      "button": {
        "color": { "$value": "#000000", "opacity": "{opacity.overlayLight}" },
        "radius": { "$value": "10px" },
        "offsetX": { "$value": "0px" },
        "offsetY": { "$value": "5px" }
      },
      "subtle": {
        "color": { "$value": "#000000", "opacity": "{opacity.glassLight}" },
        "radius": { "$value": "8px" },
        "offsetX": { "$value": "0px" },
        "offsetY": { "$value": "2px" }
      }
    }
  },

  "animation": {
    "$type": "duration",
    "$description": "Animation timing tokens",
    "quick": { "$value": "{primitive.duration.quick}", "description": "Quick animation (200ms)" },
    "standard": { "$value": "{primitive.duration.normal}", "description": "Standard animation (500ms)" },
    "slow": { "$value": "{primitive.duration.slow}", "description": "Slow animation (700ms)" }
  },

  "materials": {
    "$type": "composite",
    "$description": "Material effects",
    "glassmorphic": {
      "type": { "$value": "ultraThinMaterial", "description": "iOS material type" },
      "opacity": { "$value": "{opacity.glassUltraLight}", "description": "Glass opacity (0.05)" }
    }
  }
}
