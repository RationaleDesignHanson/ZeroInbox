{
  "$schema": "https://design-tokens.github.io/community-group/format-draft1.json",
  "name": "Zero Design System",
  "version": "1.0.0",
  "colors": {
    "primary": {
      "$type": "color",
      "white": {
        "$value": "#FFFFFF",
        "description": "Primary text color on dark backgrounds"
      },
      "black": {
        "$value": "#000000",
        "description": "Primary background for toasts and overlays"
      },
      "gray": {
        "$value": "#8E8E93",
        "description": "Secondary text and disabled states"
      }
    },
    "semantic": {
      "$type": "color",
      "success": {
        "$value": "#34C759",
        "description": "Success states, confirmations"
      },
      "error": {
        "$value": "#FF3B30",
        "description": "Error states, destructive actions"
      },
      "warning": {
        "$value": "#FF9500",
        "description": "Warning states, attention needed"
      },
      "info": {
        "$value": "#007AFF",
        "description": "Informational states, links"
      }
    },
    "opacity": {
      "$type": "number",
      "high": {
        "$value": 0.92,
        "description": "Toast backgrounds, high opacity overlays"
      },
      "medium": {
        "$value": 0.6,
        "description": "Secondary text, countdown numbers"
      },
      "mediumLow": {
        "$value": 0.4,
        "description": "Ring progress indicators"
      },
      "low": {
        "$value": 0.3,
        "description": "Progress bars, subtle indicators"
      },
      "veryLow": {
        "$value": 0.1,
        "description": "Background tracks, subtle dividers"
      }
    }
  },
  "typography": {
    "fontFamilies": {
      "$type": "fontFamily",
      "system": {
        "$value": "SF Pro",
        "description": "System font family (SF Pro on iOS)"
      }
    },
    "fontSizes": {
      "$type": "dimension",
      "xs": {
        "$value": "12px",
        "description": "Captions, metadata"
      },
      "sm": {
        "$value": "13px",
        "description": "Countdown numbers, secondary labels"
      },
      "base": {
        "$value": "15px",
        "description": "Body text, toast messages"
      },
      "lg": {
        "$value": "17px",
        "description": "Primary headlines, navigation"
      },
      "xl": {
        "$value": "20px",
        "description": "Icons, buttons"
      },
      "2xl": {
        "$value": "24px",
        "description": "Section headers"
      },
      "3xl": {
        "$value": "32px",
        "description": "Page titles"
      }
    },
    "fontWeights": {
      "$type": "fontWeight",
      "regular": {
        "$value": 400,
        "description": "Body text, labels"
      },
      "medium": {
        "$value": 500,
        "description": "Emphasis, countdown numbers"
      },
      "semibold": {
        "$value": 600,
        "description": "Headings, important actions"
      },
      "bold": {
        "$value": 700,
        "description": "Strong emphasis, alerts"
      }
    },
    "lineHeights": {
      "$type": "dimension",
      "tight": {
        "$value": "1.2",
        "description": "Headings, single-line text"
      },
      "normal": {
        "$value": "1.5",
        "description": "Body text, multi-line content"
      },
      "relaxed": {
        "$value": "1.75",
        "description": "Long-form content"
      }
    }
  },
  "spacing": {
    "$type": "dimension",
    "0": {
      "$value": "0px"
    },
    "1": {
      "$value": "4px",
      "description": "Tight spacing (progress bar padding)"
    },
    "2": {
      "$value": "8px",
      "description": "Close elements (icon to text)"
    },
    "3": {
      "$value": "12px",
      "description": "Related elements (button groups)"
    },
    "4": {
      "$value": "16px",
      "description": "Component padding (toast horizontal)"
    },
    "5": {
      "$value": "20px",
      "description": "Container padding (toast from edge)"
    },
    "6": {
      "$value": "24px",
      "description": "Section spacing (toast from bottom)"
    },
    "8": {
      "$value": "32px",
      "description": "Large section spacing (iPad)"
    }
  },
  "sizing": {
    "$type": "dimension",
    "touchTarget": {
      "$value": "44px",
      "description": "Minimum touch target (iOS HIG)"
    },
    "iconSm": {
      "$value": "16px",
      "description": "Small icons"
    },
    "iconBase": {
      "$value": "20px",
      "description": "Standard icons (undo button)"
    },
    "iconLg": {
      "$value": "24px",
      "description": "Large icons"
    },
    "progressBar": {
      "$value": "2px",
      "description": "Progress bar height"
    },
    "ringStroke": {
      "$value": "2px",
      "description": "Circular ring stroke width"
    }
  },
  "borderRadius": {
    "$type": "dimension",
    "none": {
      "$value": "0px"
    },
    "sm": {
      "$value": "1px",
      "description": "Progress bar corners"
    },
    "base": {
      "$value": "8px",
      "description": "Buttons, cards"
    },
    "lg": {
      "$value": "12px",
      "description": "Toast, modals"
    },
    "xl": {
      "$value": "16px",
      "description": "Large cards"
    },
    "full": {
      "$value": "9999px",
      "description": "Pills, circular elements"
    }
  },
  "animation": {
    "duration": {
      "$type": "duration",
      "instant": {
        "$value": "100ms",
        "description": "Immediate feedback"
      },
      "fast": {
        "$value": "300ms",
        "description": "Toast exit, quick transitions"
      },
      "normal": {
        "$value": "600ms",
        "description": "Toast entrance with spring"
      },
      "slow": {
        "$value": "1000ms",
        "description": "Loading states"
      },
      "undoWindow": {
        "$value": "10000ms",
        "description": "Undo countdown duration"
      }
    },
    "easing": {
      "$type": "cubicBezier",
      "linear": {
        "$value": [0, 0, 1, 1],
        "description": "Linear progression (countdown)"
      },
      "easeOut": {
        "$value": [0, 0, 0.2, 1],
        "description": "Deceleration"
      },
      "easeInOut": {
        "$value": [0.4, 0, 0.2, 1],
        "description": "Smooth both ends"
      },
      "spring": {
        "$value": [0.5, 1.25, 0.75, 1],
        "description": "Spring physics (toast entrance)"
      }
    }
  },
  "components": {
    "toast": {
      "$type": "composite",
      "undo": {
        "width": {
          "$type": "dimension",
          "$value": "90%",
          "max": "380px",
          "description": "Responsive width"
        },
        "minHeight": {
          "$type": "dimension",
          "$value": "54px"
        },
        "backgroundColor": {
          "$type": "color",
          "$value": "{colors.primary.black}",
          "opacity": "{colors.opacity.high}"
        },
        "blur": {
          "$type": "string",
          "$value": "ultraThinMaterial",
          "description": "iOS material blur effect"
        },
        "padding": {
          "horizontal": "{spacing.4}",
          "vertical": "{spacing.3}"
        },
        "cornerRadius": "{borderRadius.lg}",
        "position": {
          "bottom": "{spacing.6}"
        }
      }
    },
    "button": {
      "$type": "composite",
      "undo": {
        "size": "{sizing.touchTarget}",
        "iconSize": "{sizing.iconBase}",
        "iconColor": "{colors.primary.white}",
        "rippleColor": "{colors.primary.white}",
        "rippleOpacity": "{colors.opacity.low}"
      }
    },
    "progressBar": {
      "$type": "composite",
      "linear": {
        "height": "{sizing.progressBar}",
        "backgroundColor": "{colors.primary.white}",
        "backgroundOpacity": "{colors.opacity.veryLow}",
        "fillColor": "{colors.primary.white}",
        "fillOpacity": "{colors.opacity.low}",
        "cornerRadius": "{borderRadius.sm}",
        "padding": {
          "horizontal": "{spacing.4}",
          "bottom": "{spacing.1}"
        }
      }
    },
    "countdown": {
      "$type": "composite",
      "ring": {
        "diameter": "{sizing.touchTarget}",
        "strokeWidth": "{sizing.ringStroke}",
        "color": "{colors.primary.white}",
        "opacity": "{colors.opacity.mediumLow}"
      },
      "numeric": {
        "fontSize": "{typography.fontSizes.sm}",
        "fontWeight": "{typography.fontWeights.medium}",
        "color": "{colors.primary.white}",
        "opacity": "{colors.opacity.medium}",
        "monospacedDigit": true
      }
    },
    "modal": {
      "$type": "composite",
      "backdrop": {
        "backgroundColor": "{colors.primary.black}",
        "opacity": "{colors.opacity.mediumLow}",
        "blur": "ultraThinMaterial"
      },
      "container": {
        "width": "90%",
        "maxWidth": "400px",
        "backgroundColor": "{colors.primary.white}",
        "cornerRadius": "{borderRadius.xl}",
        "padding": {
          "horizontal": "{spacing.6}",
          "vertical": "{spacing.6}"
        }
      },
      "header": {
        "fontSize": "{typography.fontSizes.2xl}",
        "fontWeight": "{typography.fontWeights.semibold}",
        "marginBottom": "{spacing.3}"
      },
      "body": {
        "fontSize": "{typography.fontSizes.base}",
        "lineHeight": "{typography.lineHeights.normal}",
        "marginBottom": "{spacing.6}"
      }
    },
    "actionButton": {
      "$type": "composite",
      "base": {
        "height": "{sizing.touchTarget}",
        "paddingHorizontal": "{spacing.6}",
        "cornerRadius": "{borderRadius.lg}",
        "fontSize": "{typography.fontSizes.lg}",
        "fontWeight": "{typography.fontWeights.semibold}"
      },
      "primary": {
        "backgroundColor": "{colors.semantic.info}",
        "textColor": "{colors.primary.white}"
      },
      "secondary": {
        "backgroundColor": "{colors.primary.gray}",
        "backgroundOpacity": "{colors.opacity.veryLow}",
        "textColor": "{colors.semantic.info}"
      },
      "destructive": {
        "backgroundColor": "{colors.semantic.error}",
        "textColor": "{colors.primary.white}"
      }
    },
    "actionCard": {
      "$type": "composite",
      "container": {
        "minHeight": "80px",
        "backgroundColor": "{colors.primary.white}",
        "cornerRadius": "{borderRadius.lg}",
        "padding": "{spacing.4}",
        "borderWidth": "1px",
        "borderColor": "{colors.primary.gray}",
        "borderOpacity": "{colors.opacity.veryLow}"
      },
      "icon": {
        "size": "{sizing.iconLg}",
        "marginRight": "{spacing.3}"
      },
      "title": {
        "fontSize": "{typography.fontSizes.lg}",
        "fontWeight": "{typography.fontWeights.semibold}",
        "marginBottom": "{spacing.1}"
      },
      "description": {
        "fontSize": "{typography.fontSizes.base}",
        "color": "{colors.primary.gray}",
        "lineHeight": "{typography.lineHeights.normal}"
      },
      "priorityBadge": {
        "height": "24px",
        "paddingHorizontal": "{spacing.2}",
        "cornerRadius": "{borderRadius.full}",
        "fontSize": "{typography.fontSizes.xs}",
        "fontWeight": "{typography.fontWeights.medium}"
      }
    },
    "inputField": {
      "$type": "composite",
      "container": {
        "height": "{sizing.touchTarget}",
        "backgroundColor": "{colors.primary.gray}",
        "backgroundOpacity": "{colors.opacity.veryLow}",
        "cornerRadius": "{borderRadius.base}",
        "padding": "{spacing.3}",
        "borderWidth": "1px",
        "borderColor": "{colors.primary.gray}",
        "borderOpacity": "{colors.opacity.low}"
      },
      "text": {
        "fontSize": "{typography.fontSizes.base}",
        "color": "{colors.primary.black}"
      },
      "placeholder": {
        "color": "{colors.primary.gray}",
        "opacity": "{colors.opacity.medium}"
      },
      "focused": {
        "borderColor": "{colors.semantic.info}",
        "borderOpacity": 1
      }
    }
  },
  "actionPriorities": {
    "$type": "composite",
    "critical": {
      "value": 95,
      "color": "#FF3B30",
      "description": "Life-critical, legal, high-stakes financial"
    },
    "veryHigh": {
      "value": 90,
      "color": "#FF9500",
      "description": "Time-sensitive, high-value actions"
    },
    "high": {
      "value": 85,
      "color": "#FFCC00",
      "description": "Important but not urgent"
    },
    "mediumHigh": {
      "value": 80,
      "color": "#34C759",
      "description": "Useful with moderate impact"
    },
    "medium": {
      "value": 75,
      "color": "#32ADE6",
      "description": "Standard actions with clear value"
    },
    "mediumLow": {
      "value": 70,
      "color": "#007AFF",
      "description": "Helpful but not essential"
    },
    "low": {
      "value": 65,
      "color": "#5856D6",
      "description": "Nice-to-have features"
    },
    "veryLow": {
      "value": 60,
      "color": "#8E8E93",
      "description": "Utility actions, fallbacks"
    }
  }
}
