{
  "name": "zero-design-system-figma-plugin",
  "version": "1.0.0",
  "description": "Figma plugin to sync Zero design system tokens",
  "main": "code.js",
  "scripts": {
    "generate-tokens": "node generate-tokens-for-plugin.js",
    "prebuild": "npm run generate-tokens",
    "build": "tsc",
    "build:sync": "npm run generate-tokens && tsc --project tsconfig-sync.json",
    "build:generator": "npm run generate-tokens && tsc --project tsconfig-component-generator.json",
    "build:variants": "npm run generate-tokens && tsc --project tsconfig-variants.json",
    "build:effects": "npm run generate-tokens && tsc --project tsconfig-effects.json",
    "build:modal-components": "npm run generate-tokens && tsc --project tsconfig-modal-components.json",
    "build:action-modals-core": "npm run generate-tokens && tsc --project tsconfig-action-modals-core.json",
    "build:action-modals-secondary": "npm run generate-tokens && tsc --project tsconfig-action-modals-secondary.json",
    "build:all": "npm run generate-tokens && tsc && tsc --project tsconfig-sync.json && tsc --project tsconfig-component-generator.json && tsc --project tsconfig-variants.json && tsc --project tsconfig-effects.json && tsc --project tsconfig-modal-components.json && tsc --project tsconfig-action-modals-core.json && tsc --project tsconfig-action-modals-secondary.json",
    "dev": "npm run generate-tokens && tsc --watch",
    "dev:generator": "npm run generate-tokens && tsc --project tsconfig-component-generator.json --watch",
    "dev:variants": "npm run generate-tokens && tsc --project tsconfig-variants.json --watch",
    "dev:effects": "npm run generate-tokens && tsc --project tsconfig-effects.json --watch"
  },
  "author": "Zero Team",
  "license": "MIT",
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "typescript": "^5.3.0"
  }
}
